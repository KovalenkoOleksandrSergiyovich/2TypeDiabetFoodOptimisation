<Page
    x:Class="WpfApp2TypeDiabet.Pages.GuestMainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp2TypeDiabet.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="GuestMainPage"
    DataContext="{Binding Source={StaticResource VMLocator}, Path=_guestMainPageViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Menu Height="25" VerticalAlignment="Top">
        <MenuItem Header="Продукти">
            <MenuItem Header="Список продуктів" />
        </MenuItem>
        <MenuItem Header="Обмеження">
            <MenuItem Header="Рекомендовані обмеження" />
        </MenuItem>
        <MenuItem Header="Оптимізувати раціон харчування" />
        <MenuItem Header="Завершити роботу" Click="ExitMenuClick"/>
    </Menu>
</Page>
